pipeline {
    agent {
        docker { image 'docker.artifactory.tools.vsware.ie/ci-runner-python-build-container:latest'
                 registryUrl 'https://docker.artifactory.tools.vsware.ie'
               }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo $PATH'
                withEnv(['PATH+PYTHON=/opt/rh/rh-python36/root/usr/bin']) {
                  sh 'pwd'
                  sh 'hostname'
                  sh 'whoami'
                  sh 'echo $PATH'
                  sh 'ls -la /opt/rh/rh-python36/'
                  sh 'python --version'
                  sh 'pip --version'
                }
            }
        }
    }
    post {
    always {
      script {
        sh(
          script: """
          sleep 300
          ./docker-clean.sh docker.artifactory.tools.vsware.ie/ci-runner-python-build-container latest
           """,
          returnStdout: true
          )
      }
      deleteDir()
    }
  }
}

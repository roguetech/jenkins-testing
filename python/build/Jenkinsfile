pipeline {
    agent {
        docker.withRegistry('https://docker.artifactory.tools.vsware.ie')
        docker.image('docker-local.artifactory.tools.vsware.ie/ci-runner-python-build-container')
    }
    stages {
        stage('Build') {
            steps {
                  sh 'python --version'
                  sh 'pip --version'
            }
        }
    }
    post {
    always {
      script {
        sh(
          script: """
          ./docker-clean.sh docker.artifactory.tools.vsware.ie/ci-runner-python-build-container latest
           """,
          returnStdout: true
          )
      }
      deleteDir()
    }
  }
}

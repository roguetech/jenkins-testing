pipeline {
    agent {
        docker { image 'docker.artifactory.tools.vsware.ie/ci-runner-python-build-container:latest' 
                 args '-t -d -u 1000'
                 registryUrl 'https://docker.artifactory.tools.vsware.ie'
               }
    }
    stages {
        stage('Build') {
            steps {
                  sh 'python --version'
                  sh 'pip --version'
                  sh 'pwd'
                  sh 'hostname'
                  sh 'who'
            }
        }
    }
    post {
    always {
      script {
        sh(
          script: """
          sleep 300
          ./docker-clean.sh docker.artifactory.tools.vsware.ie/ci-runner-python-build-container latest
           """,
          returnStdout: true
          )
      }
      deleteDir()
    }
  }
}

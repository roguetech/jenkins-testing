pipeline {
    agent {
        docker {
            image 'docker-local.artifactory.tools.vsware.ie/ci-runner-python-build-container'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh ( 
                  script: """ #!/usr/bin/bash
                  hostname
                  cat /etc/passwd
                  python --version
                  pip --version
                  ls -la /opt/rh/rh-python36/
                  """
                )
            }
        }
    }
}

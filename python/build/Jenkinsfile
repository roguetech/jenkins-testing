pipeline {
    agent {
        docker { image 'docker.artifactory.tools.vsware.ie/ci-runner-python-build-container:latest'
                 registryUrl 'https://docker.artifactory.tools.vsware.ie'
               }
    }
    
    environment {
        PATH = "/opt/rh/rh-python36/root/usr/bin:/home/centos/.local/bin:/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
    }
    
    stages {
        stage('Build') {
            steps {
                  sh 'pwd'
                  sh 'hostname'
                  sh 'whoami'
                  sh 'echo $PATH'
                  sh 'ls -la /opt/rh/rh-python36/'
                  sh 'printenv | grep PATH'
                  sh 'python --version'
                  sh 'pip --version'
            }
        }
    }
    post {
    always {
      script {
        sh(
         
          )
      }
      deleteDir()
    }
  }
}


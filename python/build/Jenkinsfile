pipeline {
  agent {
    docker {
      image 'docker.artifactory.tools.vsware.ie/ci-runner-python-build-container'
      registryUrl 'https://docker.artifactory.tools.vsware.ie'
      args '-v /home/centos/.aws:/home/centos/.aws -v $HOME/.ssh:/home/centos/.ssh -v $HOME/.ssh:/home/jenkins/.ssh -v /home/centos/.aws:/var/jenkins_home/.aws -v $WORKSPACE:/home/centos/app -v /var/run/docker.sock:/var/run/docker.sock -w /home/centos/app'
    }
  }
    stages {
      stage('Checkout'){
        steps {
          sh 'echo Checkout AWS Functions'
          echo 'test checkout'
        }
      }

      stage("Setting Up Environment"){
        steps {
          sh '''
            echo "=============== STOPPING ENVIRONMENT ==========================="

            echo "BUILD_RELEASE_NUMBER=1.0-LATEST" > env.properties

            echo "++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"
            echo "setting up python environment"
            
    

            echo "++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"
          '''
        }
      }

      stage('Shutting down Dev Environment'){
        steps {
          sh '''
            echo "running script"

            
            echo "before"
  
            echo "middle"
            JSON='{"env":"no_preprod","action":"stop"}'
            python3 -u test.py
            echo $JSON 
        '''
        }
      }
    }

    post {
      always {
        deleteDir()
      }
    }
}

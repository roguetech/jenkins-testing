pipeline {
    agent {
         docker { image 'python' }
    }
    stages {
        stage('Build') {
            steps {
                  sh 'python --version'
                  sh 'pip --version'
            }
        }
    }
    post {
    always {
      script {
        sh(
          script: """
          #./docker-clean.sh docker.artifactory.tools.vsware.ie/${ARTIFACT_NAME} ${BUILD_RELEASE_NUMBER}
          ./docker-clean.sh docker.artifactory.tools.vsware.ie/ci-runner-python-build-container latest
           """,
          returnStdout: true
          )
      }
      deleteDir()
    }
  }
}
